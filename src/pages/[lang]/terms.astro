---
import MainLayout from "@/layouts/MainLayout.astro";
import Section from "@/components/sections/Section.astro";
import { loadTranslations, type Language } from '../../i18n/utils';

export const prerender = true;

export function getStaticPaths() {
  return [
    { params: { lang: 'ja' } },
    { params: { lang: 'en' } },
    { params: { lang: 'es' } },
    { params: { lang: 'zh' } },
  ];
}

const { lang } = Astro.params;
const currentLanguage = lang as Language;
const translations = await loadTranslations(currentLanguage);
const currentPath = `/${lang}/terms`;
---

<MainLayout
  title={`${translations.termsOfService.title} | IoTRealm`}
  description={translations.termsOfService.description}
  currentLanguage={currentLanguage}
  currentPath={currentPath}
>
  <Section id="terms">
    <div class="container mx-auto px-4 pt-40 pb-16 max-w-4xl">
      <h1 class="text-4xl font-bold mb-8 text-gray-900">{translations.termsOfService.title}</h1>

      <div class="prose prose-lg max-w-none">
        <p class="text-gray-600 mb-8">
          {translations.termsOfService.intro}
        </p>

        <p class="text-sm text-gray-500 mb-8">{translations.termsOfService.effectiveDate}</p>

        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-900">{translations.termsOfService.sections.application.title}</h2>
          <p class="text-gray-700">
            {translations.termsOfService.sections.application.content}
          </p>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-900">{translations.termsOfService.sections.definitions.title}</h2>
          <p class="text-gray-700 mb-4">{translations.termsOfService.sections.definitions.content}</p>
          <ul class="list-disc pl-6 space-y-2 text-gray-700">
            {translations.termsOfService.sections.definitions.terms.map((term: string) => (
              <li>{term}</li>
            ))}
          </ul>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-900">{translations.termsOfService.sections.services.title}</h2>
          <p class="text-gray-700 mb-4">{translations.termsOfService.sections.services.content}</p>
          <ul class="list-disc pl-6 space-y-2 text-gray-700">
            {translations.termsOfService.sections.services.list.map((service: string) => (
              <li>{service}</li>
            ))}
          </ul>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-900">{translations.termsOfService.sections.registration.title}</h2>
          <p class="text-gray-700 mb-4">{translations.termsOfService.sections.registration.content}</p>
          <ul class="list-disc pl-6 space-y-2 text-gray-700">
            {translations.termsOfService.sections.registration.reasons.map((reason: string) => (
              <li>{reason}</li>
            ))}
          </ul>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-900">{translations.termsOfService.sections.payment.title}</h2>
          <p class="text-gray-700 mb-4">{translations.termsOfService.sections.payment.content}</p>
          <ul class="list-disc pl-6 space-y-2 text-gray-700">
            {translations.termsOfService.sections.payment.fees.map((fee: string) => (
              <li>{fee}</li>
            ))}
          </ul>
          <p class="text-gray-700 mt-4">
            {translations.termsOfService.sections.payment.lateFee}
          </p>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-900">{translations.termsOfService.sections.intellectualProperty.title}</h2>
          <p class="text-gray-700">
            {translations.termsOfService.sections.intellectualProperty.content}
          </p>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-900">{translations.termsOfService.sections.dataHandling.title}</h2>
          <p class="text-gray-700 mb-4">{translations.termsOfService.sections.dataHandling.content}</p>
          <ul class="list-disc pl-6 space-y-2 text-gray-700">
            {translations.termsOfService.sections.dataHandling.purposes.map((purpose: string) => (
              <li>{purpose}</li>
            ))}
          </ul>
          <p class="text-gray-700 mt-4">
            {translations.termsOfService.sections.dataHandling.security}
          </p>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-900">{translations.termsOfService.sections.prohibited.title}</h2>
          <p class="text-gray-700 mb-4">{translations.termsOfService.sections.prohibited.content}</p>
          <ul class="list-disc pl-6 space-y-2 text-gray-700">
            {translations.termsOfService.sections.prohibited.list.map((item: string) => (
              <li>{item}</li>
            ))}
          </ul>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-900">{translations.termsOfService.sections.serviceSuspension.title}</h2>
          <p class="text-gray-700 mb-4">{translations.termsOfService.sections.serviceSuspension.content}</p>
          <ul class="list-disc pl-6 space-y-2 text-gray-700">
            {translations.termsOfService.sections.serviceSuspension.reasons.map((reason: string) => (
              <li>{reason}</li>
            ))}
          </ul>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-900">{translations.termsOfService.sections.disclaimer.title}</h2>
          <p class="text-gray-700 mb-4">
            {translations.termsOfService.sections.disclaimer.content}
          </p>
          <p class="text-gray-700 mb-4">
            {translations.termsOfService.sections.disclaimer.liability}
          </p>
          <p class="text-gray-700">
            {translations.termsOfService.sections.disclaimer.aiDisclaimer}
          </p>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-900">{translations.termsOfService.sections.serviceChanges.title}</h2>
          <p class="text-gray-700">
            {translations.termsOfService.sections.serviceChanges.content}
          </p>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-900">{translations.termsOfService.sections.termsChanges.title}</h2>
          <p class="text-gray-700 mb-4">{translations.termsOfService.sections.termsChanges.content}</p>
          <ul class="list-disc pl-6 space-y-2 text-gray-700">
            {translations.termsOfService.sections.termsChanges.conditions.map((condition: string) => (
              <li>{condition}</li>
            ))}
          </ul>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-900">{translations.termsOfService.sections.privacy.title}</h2>
          <p class="text-gray-700">
            {translations.termsOfService.sections.privacy.content}
          </p>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-900">{translations.termsOfService.sections.confidentiality.title}</h2>
          <p class="text-gray-700">
            {translations.termsOfService.sections.confidentiality.content}
          </p>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-900">{translations.termsOfService.sections.restrictions.title}</h2>
          <p class="text-gray-700 mb-4">{translations.termsOfService.sections.restrictions.content}</p>
          <ul class="list-disc pl-6 space-y-2 text-gray-700">
            {translations.termsOfService.sections.restrictions.reasons.map((reason: string) => (
              <li>{reason}</li>
            ))}
          </ul>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-900">{translations.termsOfService.sections.termination.title}</h2>
          <p class="text-gray-700">
            {translations.termsOfService.sections.termination.content}
          </p>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-900">{translations.termsOfService.sections.governingLaw.title}</h2>
          <p class="text-gray-700">
            {translations.termsOfService.sections.governingLaw.content}
          </p>
        </section>

        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4 text-gray-900">{translations.termsOfService.sections.contact.title}</h2>
          <p class="text-gray-700 mb-4">
            {translations.termsOfService.sections.contact.content}
          </p>
          <div class="bg-gray-50 p-6 rounded-lg">
            <p class="text-gray-700">
              {translations.termsOfService.sections.contact.company}<br>
              {translations.termsOfService.sections.contact.department}<br>
              {translations.termsOfService.sections.contact.emailLabel}<a href={`mailto:${translations.termsOfService.sections.contact.email}`} class="text-blue-600 hover:underline">{translations.termsOfService.sections.contact.email}</a><br>
              {translations.termsOfService.sections.contact.formLabel}<a href={translations.termsOfService.sections.contact.form} target="_blank" class="text-blue-600 hover:underline">{translations.termsOfService.sections.contact.form}</a>
            </p>
          </div>
        </section>

        <p class="text-center text-gray-600 mt-12">{translations.termsOfService.conclusion}</p>
      </div>
    </div>
  </Section>
</MainLayout>