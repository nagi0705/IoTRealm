---
import { Image } from "astro:assets";
import Facebook from "../../assets/facebook.svg";
import Linkedin from "../../assets/linkedin.svg";
import Logo from "../../assets/logo-alt.svg";
import Twitter from "../../assets/twitter.svg";

const logos = [
  { name: "Facebook", src: Facebook, link: "https://facebook.com" },
  { name: "Linkedin", src: Linkedin, link: "https://linkedin.com" },
  { name: "Twitter", src: Twitter, link: "https://twitter.com" },
];

const links = [
  { name: "サービス概要", href: "/#service-overview" },
  { name: "料金体系", href: "/#pricing" },
  { name: "ソリューション", href: "/#solutions" },
  { name: "対応業界", href: "/#industries" },
  { name: "実績・事例", href: "/#cases" },
  { name: "FAQ", href: "/#faq" },
];
---

<section class="sm:px-5">
  <div class="w-full max-w-[1240px] mx-auto">
    <div
      class="px-[15px] bg-dark text-gray pt-[40px] pb-[15px] lg:px-[60px] sm:rounded-t-[45px]"
    >
      <div>
        <div
          class="flex flex-col lg:flex-row gap-7 items-center justify-between"
        >
          <picture>
            <a href="#home">
              <Image src={Logo} alt="Logo for Kreatif Brand" />
            </a>
          </picture>
          <ul class="flex flex-col sm:flex-row gap-5">
            {
              links.map((link) => {
                return (
                  <li class="text-center">
                    <a class="underline" href={link.href}>
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
          <ul class="flex gap-5">
            {
              logos.map((logo) => {
                return (
                  <li>
                    <a href={logo.link} target="_blank">
                      <picture>
                        <Image src={logo.src} alt={logo.name} />
                      </picture>
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </div>

        <div class="flex flex-col lg:flex-row mt-[40px] mb-[30px] justify-center">
          <div
            class="flex text-center flex-col w-full lg:w-auto"
          >
            <h3 class="mb-5 text-center text-2xl text-green">お問い合わせ</h3>
            <div class="flex flex-col justify-center items-center gap-4">
              <a 
                href="https://cor-jp.com/contact/" 
                target="_blank"
                class="px-8 py-4 bg-green hover:bg-green-600 text-white font-semibold rounded-xl transition-colors duration-300 shadow-lg hover:shadow-xl"
              >
                お問い合わせフォーム
              </a>
              <p class="text-sm text-gray-300 text-center">
                ご質問・ご相談はこちらから<br>
                お気軽にお問い合わせください
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="h-[1px] bg-gray mb-5"></div>
      <div
        class="flex flex-col lg:flex-row h-20 justify-center mt-4 text-center md:justify-between md:mt-0"
      >
        <span>
          <a
            class="underline"
            href="https://cor-jp.com"
            target="_blank">@
          Cor.inc</a
          > による共創型AI・IoTソリューション開発
        </span>
      </div>
    </div>
  </div>
</section>
