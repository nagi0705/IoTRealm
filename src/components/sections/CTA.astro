---
import Section from "./Section.astro";
import { loadTranslations, type Language } from '../../i18n/utils';

export interface Props {
  currentLanguage?: Language;
}

const { currentLanguage = 'ja' } = Astro.props;
const translations = await loadTranslations(currentLanguage);
---

<Section id="contact">
<div class="container mx-auto px-4 py-16">
    <div class="max-w-4xl mx-auto">
        <!-- メインCTA -->
        <div class="bg-blue-800 rounded-3xl p-8 md:p-12 text-center text-white mb-12 shadow-2xl">
            <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white drop-shadow-lg">
                {translations.contact.title}
            </h2>
            <p class="text-xl mb-8 text-white drop-shadow-md">
                {translations.contact.subtitle}
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                <a href="https://cor-jp.com/contact/"
                   target="_blank"
                   class="bg-white text-black hover:bg-gray-100 hover:text-gray-800 px-8 py-4 rounded-2xl text-lg font-bold transition-colors duration-300 min-w-[200px] shadow-lg border-2 border-gray-300"
                   style="color: #000000 !important; font-weight: bold !important;">
                    {translations.contact?.freeConsultationButton || (currentLanguage === 'ja' ? '無料相談申込' : currentLanguage === 'zh' ? '免费咨询申请' : currentLanguage === 'es' ? 'Solicitud de consulta gratuita' : 'Free Consultation Request')}
                </a>
                <div class="text-white">
                    <span class="text-2xl font-bold text-red-200">{translations.contact?.freeTime || (currentLanguage === 'ja' ? '初回相談無料！' : currentLanguage === 'zh' ? '首次咨询免费！' : currentLanguage === 'es' ? '¡Primera consulta gratis!' : 'First consultation free!')}</span>
                </div>
            </div>
        </div>

        <!-- 連絡先情報 -->
        <div class="bg-gray-50 rounded-2xl shadow-lg p-8 mb-12">
            <h3 class="text-xl font-bold text-center mb-6 text-gray-900">
                {translations.contact?.otherMethods?.title || (currentLanguage === 'ja' ? 'その他のお問い合わせ方法' : currentLanguage === 'zh' ? '其他咨询方式' : currentLanguage === 'es' ? 'Otros métodos de contacto' : 'Other Contact Methods')}
            </h3>
            <div class="text-center">
                <div class="bg-white rounded-lg p-6 mb-4">
                    <div class="text-2xl mb-3">📧</div>
                    <h5 class="font-medium text-gray-800 mb-2">
                        {translations.contact?.otherMethods?.email?.title || (currentLanguage === 'ja' ? 'メールでのお問い合わせ' : currentLanguage === 'zh' ? '邮件咨询' : currentLanguage === 'es' ? 'Consulta por correo' : 'Email Inquiry')}
                    </h5>
                    <a href="mailto:company@cor-jp.com" class="text-blue-600 font-semibold hover:text-blue-700 text-lg">
                        company@cor-jp.com
                    </a>
                </div>
                <p class="text-sm text-gray-500">
                    {translations.contact?.otherMethods?.urgentNote || (currentLanguage === 'ja' ? '※お急ぎの場合はメールに「至急」とご記入ください' : currentLanguage === 'zh' ? '※如果紧急，请在邮件中标注【紧急】' : currentLanguage === 'es' ? '※Si es urgente, por favor escriba "Urgente" en el correo' : '※If urgent, please write "Urgent" in the email')}
                </p>
            </div>
        </div>

        <!-- ソーシャル証明 -->
        <div class="bg-blue-50 rounded-2xl shadow-lg p-8">
            <h3 class="text-2xl font-bold text-center mb-8 text-gray-900">
                {translations.contact?.results?.title || (currentLanguage === 'ja' ? '導入実績' : currentLanguage === 'zh' ? '实施成果' : currentLanguage === 'es' ? 'Resultados de implementación' : 'Implementation Results')}
            </h3>
            <div class="grid md:grid-cols-3 gap-8 text-center">
                <div>
                    <div class="text-3xl font-bold text-blue-600 mb-2">50+</div>
                    <div class="text-gray-600">{translations.contact?.results?.companies || (currentLanguage === 'ja' ? '導入企業数' : currentLanguage === 'zh' ? '引入企业数量' : currentLanguage === 'es' ? 'Empresas implementadas' : 'Companies Implemented')}</div>
                </div>
                <div>
                    <div class="text-3xl font-bold text-green-600 mb-2">95%</div>
                    <div class="text-gray-600">{translations.contact?.results?.satisfaction || (currentLanguage === 'ja' ? '顧客満足度' : currentLanguage === 'zh' ? '客户满意度' : currentLanguage === 'es' ? 'Satisfacción del cliente' : 'Customer Satisfaction')}</div>
                </div>
                <div>
                    <div class="text-3xl font-bold text-purple-600 mb-2">{currentLanguage === 'ja' ? '8ヶ月' : currentLanguage === 'zh' ? '8个月' : currentLanguage === 'es' ? '8 meses' : '8 months'}</div>
                    <div class="text-gray-600">{translations.contact?.results?.recoveryPeriod || (currentLanguage === 'ja' ? '平均投資回収期間' : currentLanguage === 'zh' ? '平均投资回收期' : currentLanguage === 'es' ? 'Período de recuperación promedio' : 'Average Recovery Period')}</div>
                </div>
            </div>
        </div>
    </div>
</div>
</Section>