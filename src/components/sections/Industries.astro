---
import Section from './Section.astro';
import { loadTranslations, type Language } from '../../i18n/utils';

export interface Props {
  currentLanguage?: Language;
}

const { currentLanguage = 'ja' } = Astro.props;
const translations = await loadTranslations(currentLanguage);
---

<Section id="industries">
<div class="container mx-auto px-4 py-16">
    <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            {translations.industries.title}
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            {translations.industries.subtitle}
        </p>
    </div>
    
    <div class="max-w-6xl mx-auto grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- 製造業 -->
        <div class="bg-white rounded-2xl shadow-2xl border border-gray-100 overflow-hidden transform hover:scale-105 transition-all duration-300">
            <div class="bg-blue-100 p-6 text-blue-800">
                <div class="text-4xl mb-3">🏭</div>
                <h3 class="text-2xl font-bold">{translations.industries.manufacturing.title}</h3>
            </div>
            <div class="p-6">
                <ul class="space-y-3 text-gray-700 mb-6">
                    {translations.industries.manufacturing.features.map((feature) => (
                        <li class="flex items-start">
                            <span class="w-2 h-2 bg-blue-500 rounded-full mr-3 mt-2"></span>
                            <span>{feature}</span>
                        </li>
                    ))}
                </ul>
                <div class="bg-blue-50 p-4 rounded-lg">
                    <div class="text-sm font-semibold text-blue-800">{translations.industries.manufacturing.effectExample}</div>
                    <div class="text-lg font-bold text-blue-600">{translations.industries.manufacturing.effect}</div>
                </div>
            </div>
        </div>
        
        <!-- 物流 -->
        <div class="bg-white rounded-2xl shadow-2xl border border-gray-100 overflow-hidden transform hover:scale-105 transition-all duration-300">
            <div class="bg-orange-100 p-6 text-orange-800">
                <div class="text-4xl mb-3">🚚</div>
                <h3 class="text-2xl font-bold">{translations.industries.logistics.title}</h3>
            </div>
            <div class="p-6">
                <ul class="space-y-3 text-gray-700 mb-6">
                    {translations.industries.logistics.features.map((feature) => (
                        <li class="flex items-start">
                            <span class="w-2 h-2 bg-orange-500 rounded-full mr-3 mt-2"></span>
                            <span>{feature}</span>
                        </li>
                    ))}
                </ul>
                <div class="bg-orange-50 p-4 rounded-lg">
                    <div class="text-sm font-semibold text-orange-800">{translations.industries.logistics.effectExample}</div>
                    <div class="text-lg font-bold text-orange-600">{translations.industries.logistics.effect}</div>
                </div>
            </div>
        </div>
        
        <!-- 農業 -->
        <div class="bg-white rounded-2xl shadow-2xl border border-gray-100 overflow-hidden transform hover:scale-105 transition-all duration-300">
            <div class="bg-yellow-100 p-6 text-yellow-800">
                <div class="text-4xl mb-3">🌾</div>
                <h3 class="text-2xl font-bold">{translations.industries.agriculture.title}</h3>
            </div>
            <div class="p-6">
                <ul class="space-y-3 text-gray-700 mb-6">
                    {translations.industries.agriculture.features.map((feature) => (
                        <li class="flex items-start">
                            <span class="w-2 h-2 bg-yellow-500 rounded-full mr-3 mt-2"></span>
                            <span>{feature}</span>
                        </li>
                    ))}
                </ul>
                <div class="bg-yellow-50 p-4 rounded-lg">
                    <div class="text-sm font-semibold text-yellow-800">{translations.industries.agriculture.effectExample}</div>
                    <div class="text-lg font-bold text-yellow-600">{translations.industries.agriculture.effect}</div>
                </div>
            </div>
        </div>
        
        <!-- 医療 -->
        <div class="bg-white rounded-2xl shadow-2xl border border-gray-100 overflow-hidden transform hover:scale-105 transition-all duration-300">
            <div class="bg-red-100 p-6 text-red-800">
                <div class="text-4xl mb-3">🏥</div>
                <h3 class="text-2xl font-bold">{translations.industries.healthcare.title}</h3>
            </div>
            <div class="p-6">
                <ul class="space-y-3 text-gray-700 mb-6">
                    {translations.industries.healthcare.features.map((feature) => (
                        <li class="flex items-start">
                            <span class="w-2 h-2 bg-red-500 rounded-full mr-3 mt-2"></span>
                            <span>{feature}</span>
                        </li>
                    ))}
                </ul>
                <div class="bg-red-50 p-4 rounded-lg">
                    <div class="text-sm font-semibold text-red-800">{translations.industries.healthcare.effectExample}</div>
                    <div class="text-lg font-bold text-red-600">{translations.industries.healthcare.effect}</div>
                </div>
            </div>
        </div>
        
        <!-- 小売 -->
        <div class="bg-white rounded-2xl shadow-2xl border border-gray-100 overflow-hidden transform hover:scale-105 transition-all duration-300">
            <div class="bg-purple-100 p-6 text-purple-800">
                <div class="text-4xl mb-3">🛒</div>
                <h3 class="text-2xl font-bold">{translations.industries.retail.title}</h3>
            </div>
            <div class="p-6">
                <ul class="space-y-3 text-gray-700 mb-6">
                    {translations.industries.retail.features.map((feature) => (
                        <li class="flex items-start">
                            <span class="w-2 h-2 bg-purple-500 rounded-full mr-3 mt-2"></span>
                            <span>{feature}</span>
                        </li>
                    ))}
                </ul>
                <div class="bg-purple-50 p-4 rounded-lg">
                    <div class="text-sm font-semibold text-purple-800">{translations.industries.retail.effectExample}</div>
                    <div class="text-lg font-bold text-purple-600">{translations.industries.retail.effect}</div>
                </div>
            </div>
        </div>
        
        <!-- エネルギー -->
        <div class="bg-white rounded-2xl shadow-2xl border border-gray-100 overflow-hidden transform hover:scale-105 transition-all duration-300">
            <div class="bg-green-100 p-6 text-green-800" style="background-color: #dcfce7 !important;">
                <div class="text-4xl mb-3">⚡</div>
                <h3 class="text-2xl font-bold">{translations.industries.energy.title}</h3>
            </div>
            <div class="p-6">
                <ul class="space-y-3 text-gray-700 mb-6">
                    {translations.industries.energy.features.map((feature) => (
                        <li class="flex items-start">
                            <span class="w-2 h-2 bg-green-500 rounded-full mr-3 mt-2"></span>
                            <span>{feature}</span>
                        </li>
                    ))}
                </ul>
                <div class="bg-green-50 p-4 rounded-lg" style="background-color: #f0fdf4 !important;">
                    <div class="text-sm font-semibold text-green-800" style="color: #166534 !important;">{translations.industries.energy.effectExample}</div>
                    <div class="text-lg font-bold text-green-600" style="color: #16a34a !important;">{translations.industries.energy.effect}</div>
                </div>
            </div>
        </div>
        
        <!-- その他 - 黒背景 -->
        <div class="bg-white rounded-2xl shadow-2xl border border-gray-100 overflow-hidden transform hover:scale-105 transition-all duration-300">
            <div class="bg-gray-100 p-6 text-gray-800" style="background-color: #f3f4f6 !important;">
                <div class="text-4xl mb-3">🔧</div>
                <h3 class="text-2xl font-bold">{translations.industries.others.title}</h3>
            </div>
            <div class="p-6">
                <ul class="space-y-3 text-gray-700 mb-6">
                    {translations.industries.others.features.map((feature) => (
                        <li class="flex items-start">
                            <span class="w-2 h-2 bg-black rounded-full mr-3 mt-2" style="background-color: #000000 !important;"></span>
                            <span>{feature}</span>
                        </li>
                    ))}
                </ul>
                <div class="bg-gray-100 p-4 rounded-lg" style="background-color: #f9fafb !important;">
                    <div class="text-sm font-semibold text-gray-800" style="color: #1f2937 !important;">{translations.industries.others.effectExample}</div>
                    <div class="text-lg font-bold text-gray-700" style="color: #374151 !important;">{translations.industries.others.effect}</div>
                </div>
            </div>
        </div>
    </div>
</div>
</Section>
