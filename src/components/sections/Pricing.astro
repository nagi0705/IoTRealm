---
import Section from "./Section.astro";
import { loadTranslations, type Language } from '../../i18n/utils';

export interface Props {
  currentLanguage?: Language;
}

const { currentLanguage = 'ja' } = Astro.props;
const translations = await loadTranslations(currentLanguage);
---

<Section id="pricing">
<div class="min-h-screen bg-gray-50">
<div class="container mx-auto px-4 py-16">
    <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            {translations.pricing.title}
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            {translations.pricing.subtitle}
        </p>
    </div>
    
    <!-- 料金テーブル -->
    <div class="max-w-5xl mx-auto">
        <div class="overflow-x-auto">
            <table class="w-full bg-white rounded-2xl shadow-2xl overflow-hidden border border-gray-200 transform hover:scale-105 transition-all duration-300">
                <thead class="bg-gradient-to-r from-blue-500 to-purple-600">
                    <tr>
                        <th class="px-6 py-4 text-left text-sm font-semibold text-white">{translations.pricing.table.service}</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold text-white">{translations.pricing.table.priceRange}</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold text-white">{translations.pricing.table.duration}</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold text-white">{translations.pricing.table.includedServices}</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    <tr class="hover:bg-blue-50 transition-colors">
                        <td class="px-6 py-4">
                            <div class="font-semibold text-gray-900 text-lg">{translations.pricing.table.poc.title}</div>
                            <div class="text-sm text-gray-600">{translations.pricing.table.poc.description}</div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-2xl font-bold text-blue-600 px-3 py-2 rounded-lg bg-blue-50">{translations.pricing.table.poc.price}</div>
                            <div class="text-xs text-gray-500 mt-1">{translations.pricing.table.poc.priceNote}</div>
                        </td>
                        <td class="px-6 py-4 text-gray-900 font-medium">{translations.pricing.table.poc.duration}</td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-gray-700 space-y-1">
                                {translations.pricing.table.poc.features.map((feature: string) => (
                                    <div class="flex items-center gap-2">
                                        <span class="w-2 h-2 bg-blue-500 rounded-full"></span>
                                        <span>{feature}</span>
                                    </div>
                                ))}
                            </div>
                        </td>
                    </tr>
                    <tr class="hover:bg-green-50 transition-colors">
                        <td class="px-6 py-4">
                            <div class="font-semibold text-gray-900 text-lg">{translations.pricing.table.mainDev.title}</div>
                            <div class="text-sm text-gray-600">{translations.pricing.table.mainDev.description}</div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-2xl font-bold text-green-600 px-3 py-2 rounded-lg bg-green-50">{translations.pricing.table.mainDev.price}</div>
                            <div class="text-xs text-gray-500 mt-1">{translations.pricing.table.mainDev.priceNote}</div>
                        </td>
                        <td class="px-6 py-4 text-gray-900 font-medium">{translations.pricing.table.mainDev.duration}</td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-gray-700 space-y-1">
                                {translations.pricing.table.mainDev.features.map((feature: string) => (
                                    <div class="flex items-center gap-2">
                                        <span class="w-3 h-3 bg-green-500 rounded-full flex-shrink-0"></span>
                                        <span>{feature}</span>
                                    </div>
                                ))}
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        
        
        <!-- 共創パートナー優待制度 -->
        <div class="mt-12 bg-white p-8 rounded-2xl shadow-2xl border border-gray-100 text-center transform hover:scale-105 transition-all duration-300">
            <h3 class="text-2xl font-bold mb-4 text-gray-900">
                {translations.pricing.partnership.title}
            </h3>
            <p class="text-lg text-gray-700 mb-6" set:html={translations.pricing.partnership.description}>
            </p>
            <a href="https://cor-jp.com/contact/" target="_blank" 
               class="inline-block px-8 py-4 bg-blue-500 hover:bg-blue-600 text-white rounded-2xl text-lg font-semibold transition-colors duration-300">
                {translations.pricing.partnership.contactButton}
            </a>
        </div>
    </div>
</div>
</div>
</Section>
