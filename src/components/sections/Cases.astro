---
import Section from './Section.astro';
import { loadTranslations, type Language } from '../../i18n/utils';

export interface Props {
  currentLanguage?: Language;
}

const { currentLanguage = 'ja' } = Astro.props;
const translations = await loadTranslations(currentLanguage);
---

<Section id="cases">
<div class="container mx-auto px-4 py-16">
    <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            {translations.cases.title}
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            {translations.cases.subtitle}
        </p>
    </div>
    
    <div class="max-w-6xl mx-auto">
        <!-- 事例テーブル -->
        <div class="overflow-x-auto mb-12">
            <table class="w-full bg-white rounded-2xl shadow-lg overflow-hidden">
                <thead class="bg-blue-50">
                    <tr>
                        <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">{translations.cases.table.headers.case}</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">{translations.cases.table.headers.industry}</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">{translations.cases.table.headers.solution}</th>
                        <th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">{translations.cases.table.headers.effect}</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="font-semibold text-gray-900">{translations.cases.table.rows[0].title}</div>
                            <div class="text-sm text-gray-600">{translations.cases.table.rows[0].description}</div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                                {translations.cases.table.rows[0].industry}
                            </span>
                        </td>
                        <td class="px-6 py-4 text-gray-700">
                            {translations.cases.table.rows[0].solution}
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-lg font-bold text-green-600">
                                <strong>{translations.cases.table.rows[0].effect}</strong>
                            </div>
                        </td>
                    </tr>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="font-semibold text-gray-900">{translations.cases.table.rows[1].title}</div>
                            <div class="text-sm text-gray-600">{translations.cases.table.rows[1].description}</div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                {translations.cases.table.rows[1].industry}
                            </span>
                        </td>
                        <td class="px-6 py-4 text-gray-700">
                            {translations.cases.table.rows[1].solution}
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-lg font-bold text-green-600">
                                <strong>{translations.cases.table.rows[1].effect}</strong>
                            </div>
                        </td>
                    </tr>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="font-semibold text-gray-900">{translations.cases.table.rows[2].title}</div>
                            <div class="text-sm text-gray-600">{translations.cases.table.rows[2].description}</div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800" style="background-color: #dcfce7 !important; color: #166534 !important;">
                                {translations.cases.table.rows[2].industry}
                            </span>
                        </td>
                        <td class="px-6 py-4 text-gray-700">
                            {translations.cases.table.rows[2].solution}
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-lg font-bold text-green-600">
                                <strong>{translations.cases.table.rows[2].effect}</strong>
                            </div>
                        </td>
                    </tr>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="font-semibold text-gray-900">{translations.cases.table.rows[3].title}</div>
                            <div class="text-sm text-gray-600">{translations.cases.table.rows[3].description}</div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                {translations.cases.table.rows[3].industry}
                            </span>
                        </td>
                        <td class="px-6 py-4 text-gray-700">
                            {translations.cases.table.rows[3].solution}
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-lg font-bold text-green-600">
                                <strong>{translations.cases.table.rows[3].effect}</strong>
                            </div>
                        </td>
                    </tr>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="font-semibold text-gray-900">{translations.cases.table.rows[4].title}</div>
                            <div class="text-sm text-gray-600">{translations.cases.table.rows[4].description}</div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                {translations.cases.table.rows[4].industry}
                            </span>
                        </td>
                        <td class="px-6 py-4 text-gray-700">
                            {translations.cases.table.rows[4].solution}
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-lg font-bold text-green-600">
                                <strong>{translations.cases.table.rows[4].effect}</strong>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        
        <!-- 効果の詳細 -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
            <div class="bg-blue-50 p-6 rounded-lg shadow-lg text-center">
                <div class="text-3xl font-bold text-blue-600 mb-2">{translations.cases.effects.workTimeReduction.value}</div>
                <div class="text-sm text-gray-600 mb-2">{translations.cases.effects.workTimeReduction.description}</div>
                <div class="text-xs text-gray-500">{translations.cases.effects.workTimeReduction.source}</div>
            </div>
            <div class="p-6 rounded-lg shadow-lg text-center" style="background-color: #f0fdf4 !important;">
                <div class="text-3xl font-bold mb-2" style="color: #15803d !important;">{translations.cases.effects.annualCostReduction.value}</div>
                <div class="text-sm text-gray-600 mb-2">{translations.cases.effects.annualCostReduction.description}</div>
                <div class="text-xs text-gray-500">{translations.cases.effects.annualCostReduction.source}</div>
            </div>
            <div class="bg-purple-50 p-6 rounded-lg shadow-lg text-center">
                <div class="text-3xl font-bold text-purple-600 mb-2">{translations.cases.effects.errorRateReduction.value}</div>
                <div class="text-sm text-gray-600 mb-2">{translations.cases.effects.errorRateReduction.description}</div>
                <div class="text-xs text-gray-500">{translations.cases.effects.errorRateReduction.source}</div>
            </div>
            <div class="bg-orange-50 p-6 rounded-lg shadow-lg text-center">
                <div class="text-3xl font-bold text-orange-600 mb-2">{translations.cases.effects.customerSatisfaction.value}</div>
                <div class="text-sm text-gray-600 mb-2">{translations.cases.effects.customerSatisfaction.description}</div>
                <div class="text-xs text-gray-500">{translations.cases.effects.customerSatisfaction.source}</div>
            </div>
            <div class="bg-red-50 p-6 rounded-lg shadow-lg text-center">
                <div class="text-3xl font-bold text-red-600 mb-2">{translations.cases.effects.seoRanking.value}</div>
                <div class="text-sm text-gray-600 mb-2">{translations.cases.effects.seoRanking.description}</div>
                <div class="text-xs text-gray-500">{translations.cases.effects.seoRanking.source}</div>
            </div>
            <div class="bg-indigo-50 p-6 rounded-lg shadow-lg text-center">
                <div class="text-3xl font-bold text-indigo-600 mb-2">{translations.cases.effects.downtimeReduction.value}</div>
                <div class="text-sm text-gray-600 mb-2">{translations.cases.effects.downtimeReduction.description}</div>
                <div class="text-xs text-gray-500">{translations.cases.effects.downtimeReduction.source}</div>
            </div>
        </div>
        
        <!-- 顧客の声 -->
        <div class="bg-blue-50 rounded-2xl p-8">
            <h3 class="text-2xl font-bold text-center mb-8 text-gray-900">
                {translations.cases.testimonials.title}
            </h3>
            <div class="grid md:grid-cols-2 gap-8">
                <div class="bg-white p-6 rounded-lg shadow">
                    <div class="flex items-center mb-4">
                        <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=50&h=50&fit=crop&crop=face" 
                             alt={translations.cases.testimonials.tanaka.name} class="w-12 h-12 rounded-full mr-4">
                        <div>
                            <div class="font-semibold text-gray-900">{translations.cases.testimonials.tanaka.name}</div>
                            <div class="text-sm text-gray-600">{translations.cases.testimonials.tanaka.position}</div>
                        </div>
                    </div>
                    <p class="text-gray-700 italic">
                        {translations.cases.testimonials.tanaka.quote}
                    </p>
                </div>
                
                <div class="bg-white p-6 rounded-lg shadow">
                    <div class="flex items-center mb-4">
                        <img src="https://images.unsplash.com/photo-1494790108755-2616b612b786?w=50&h=50&fit=crop&crop=face" 
                             alt={translations.cases.testimonials.sato.name} class="w-12 h-12 rounded-full mr-4">
                        <div>
                            <div class="font-semibold text-gray-900">{translations.cases.testimonials.sato.name}</div>
                            <div class="text-sm text-gray-600">{translations.cases.testimonials.sato.position}</div>
                        </div>
                    </div>
                    <p class="text-gray-700 italic">
                        {translations.cases.testimonials.sato.quote}
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
</Section>